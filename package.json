{
  "name": "open-science-dlt",
  "version": "0.2.0",
  "description": "A decentralized platform for open science publishing using Stellar blockchain",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "dev:api": "ts-node src/api/server.ts",
    "test": "NODE_ENV=test jest --coverage",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:api": "NODE_ENV=test jest --testPathPattern=test/api",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "type-check": "tsc --noEmit",
    "docs": "typedoc --out docs/generated src/",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "security-audit": "npm audit && snyk test",
    "clean": "rimraf dist coverage docs/generated",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "ts-node prisma/seed.ts",
    "db:reset": "prisma migrate reset"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/[your-username]/open-science-dlt.git"
  },
  "keywords": [
    "blockchain",
    "stellar",
    "science",
    "publishing",
    "peer-review",
    "open-science"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/[your-username]/open-science-dlt/issues"
  },
  "homepage": "https://github.com/[your-username]/open-science-dlt#readme",
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/rate-limit": "^9.1.0",
    "@prisma/client": "^5.22.0",
    "bcrypt": "^5.1.1",
    "config": "^3.3.9",
    "dotenv": "^16.6.1",
    "fastify": "^4.29.1",
    "ipfs-http-client": "^56.0.1",
    "jsonwebtoken": "^9.0.2",
    "stellar-sdk": "^10.4.1",
    "winston": "^3.8.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/config": "^3.3.0",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.24",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "prisma": "^5.22.0",
    "rimraf": "^5.0.1",
    "snyk": "^1.1144.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.24.8",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.ts"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/types/**/*.ts",
      "!src/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    },
    "testTimeout": 30000
  }
}
